{
    "builds": [
            {
            "src": "core/wsgi.py",
            "use": "@vercel/vercel-python-wsgi",
            "config": { 
                "maxLambdaSize": "15mb",
                "runtime": "Python3.9"
            }
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "staticfiles_build"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "core/wsgi.py"
        }
    ]
}